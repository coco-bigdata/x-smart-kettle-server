<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0
        http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>make-assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!--增加linux脚本打包方式-->
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!--增加windows脚本打包方式-->
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <!--将配置文件打包到bin目录-->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>${file.separator}server/config</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                <include>application-dev.yml</include>
                <include>*.xml</include>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/template</directory>
            <outputDirectory>${file.separator}server/template</outputDirectory>
            <fileMode>0644</fileMode>
            <includes>
                 <include>*.kjb</include>
             </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/bin/log</directory>
            <outputDirectory>${file.separator}log</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/bin/front</directory>
            <outputDirectory>${file.separator}front</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/bin/server/simple-jndi</directory>
            <outputDirectory>${file.separator}server/simple-jndi</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/bin/server/simple-jndi</directory>
            <outputDirectory>${file.separator}simple-jndi</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>${file.separator}server</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <!--是否把本项目添加到依赖文件夹下-->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${file.separator}lib</outputDirectory>
            <!--将scope为runtime的依赖包打包-->
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>